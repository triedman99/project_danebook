<main>
<header class = "container" id="cover">

  <%= render partial: 'shared/cover_images' %>

    <!--secondary navbar-->
    <div id = "profile-nav" class = "row">
      <div class = "col-md-7 col-md-offset-3">
        <ul class = "nav nav-tabs " role = "profile-nav">
          <li><%= link_to "Timeline", timeline_path %></li>
          <li class='active'><%= link_to "About", user_path(current_user) %></li>
          <li><%= link_to "Photos (123)", photos_path  %></li>
          <li><%= link_to "Friends (542)", friends_path %></li>
      </div>
    </div>
  </header>

<!-- This part changes page by page -->
  <section class="container" id="information-pane">
    <header class="row">
      <div class="col-md-offset-2 col-md-8 about-header">
        <h2>Edit Profile</h2>
      </div>
    </header>


    <div class = "row">
    <%= form_for [@profile.user, @profile] do |f| %>
      <div class = "col-md-5 col-md-offset-1">
        <h3>Basic Information</h3>
        <table class = "table about-table">
          <tr>
            <td>Birthday:</td>
            <td><%= current_user.birthday.strftime("%b %d, %Y") %></td>
          </tr>
          <tr>
            <td>College:</td>
            <td><%= f.text_field :college, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>Hometown:</td>
            <td><%= f.text_field :hometown, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>Currently Lives:</td>
            <td><%= f.text_field :current_city, class: 'form-control' %></td>
          </tr>
        </table>

        <h3>Contact Information</h3>
        <table class = "table about-table">
          <tr>
            <td>Email:</td>
            <td><%= current_user.email %></td>
          </tr>
          <tr>
            <td>Telephone:</td>
            <td><%= f.text_field :telephone, class: 'form-control' %></td>
          </tr>
        </table>

      </div>

      <div class = "col-md-5">
        <h3>Words to live by</h3>
        <%= f.text_area :words_to_live_by, size: '40x5', class: 'form-control' %>
        <h3>About me</h3>
        <%= f.text_area :about_me, size: '40x5', class: 'form-control' %>
      </div>

      <div class="form-group col-md-6 col-md-offset-3">
        <%= f.submit "Save Changes", class: 'btn btn-lg btn-block btn-default', id: 'save-profile' %>
      </div>
    <% end %>
    </div>
  </section>

</main>