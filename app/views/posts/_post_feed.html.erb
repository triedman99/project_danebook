<div class = "col-md-7 col-md-offset-1" id = "post-feed">

  <%= render partial: 'post_form' if @user = current_user %>

  <% @posts.each do |post| %>
    <article class='row single-post' data-id="<%=post.id%>">
      <header class='col-sm-12'>
        <div class='col-sm-2'>
          <%= image_tag("user_silhouette_generic.png") %>
        </div>
        <div class='col-sm-10'>
          <p><%= link_to post.user.name, post.user %></p>
          <p class='date-posted'>Posted on <%= post.created_at.strftime("%A %m\/%d\/%y") %></p>
        </div>
      </header>

      <section class='col-sm-12 post-body'>
        <p><%= post.body %></p>
      </section>

      <section class='col-sm-12 like-section'>
        <div class='row'>
          <div class='col-sm-1'>
            <a class='col-sm-2 comment-link' href='#'>Like</a>
          </div>

          <a class='col-sm-2 comment-link' href='#'>Comment</a>

          <% if current_user == @user %>
            <%= link_to "Delete", post_path(post, current_user), method: 'delete', class: 'col-sm-1 pull-right', data: {confirm: "Are you sure you want to delete this post?"} %>
          <% end %>

          <div class='col-sm-12'>
            Like sentence
          </div>
        </div>
      </section>

    </article>
  <% end %>
</div>